<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/signUpButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="SignUp" />

    <EditText
        android:id="@+id/secondNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/secondNameView"
        android:layout_alignBottom="@+id/secondNameView"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/secondNameView"
        android:ems="10" />

    <TextView
        android:id="@+id/countryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/secondNameView"
        android:layout_below="@+id/secondNameEditText"
        android:layout_marginTop="30dp"
        android:text="country" />

    <EditText
        android:id="@+id/countryEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/countryText"
        android:ems="10" />

    <TextView
        android:id="@+id/bioTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/countryText"
        android:layout_below="@+id/countryEditText"
        android:layout_marginTop="29dp"
        android:text="Bio:" />

    <EditText
        android:id="@+id/bioEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bioTextView"
        android:layout_alignBottom="@+id/bioTextView"
        android:layout_alignLeft="@+id/countryEditText"
        android:ems="10" />

    <TextView
        android:id="@+id/cityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/bioTextView"
        android:layout_below="@+id/bioEditText"
        android:layout_marginTop="23dp"
        android:text="City:" />

    <EditText
        android:id="@+id/cityEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cityTextView"
        android:layout_alignBottom="@+id/cityTextView"
        android:layout_alignLeft="@+id/bioEditText"
        android:ems="10" />

    <EditText
        android:id="@+id/interestEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cityEditText"
        android:layout_below="@+id/cityEditText"
        android:layout_marginTop="17dp"
        android:ems="10" />

    <TextView
        android:id="@+id/interestTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/interestEditText"
        android:layout_alignBottom="@+id/interestEditText"
        android:layout_alignRight="@+id/nameView1"
        android:text="Interest:" />

    <TextView
        android:id="@+id/nameView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@+id/countryEditText"
        android:text="Name:" />

    <EditText
        android:id="@+id/nameEditText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nameView1"
        android:layout_alignBottom="@+id/nameView1"
        android:layout_alignRight="@+id/secondNameEditText"
        android:ems="10" />

    <TextView
        android:id="@+id/secondNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameEditText1"
        android:layout_marginTop="22dp"
        android:layout_toLeftOf="@+id/signUpButton1"
        android:text="Second name:" />

    <TextView
        android:id="@+id/emailView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/countryText"
        android:layout_below="@+id/interestEditText"
        android:layout_marginTop="20dp"
        android:text="email:" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/emailView"
        android:layout_alignBottom="@+id/emailView"
        android:layout_toRightOf="@+id/secondNameView"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/passwordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/interestTextView"
        android:layout_below="@+id/emailEditText"
        android:layout_marginTop="14dp"
        android:text="Password:" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/passwordTextView"
        android:layout_toRightOf="@+id/secondNameView"
        android:ems="10" />

</RelativeLayout>
