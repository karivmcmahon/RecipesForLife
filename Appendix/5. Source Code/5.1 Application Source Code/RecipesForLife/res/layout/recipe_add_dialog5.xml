<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_dialog3"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/addIngredientView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="22dp"
        android:text="Add Ingredient:" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/ingredsView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addIngredientView"
            android:layout_marginTop="22dp"
            android:gravity="left"
            android:padding="2dp"
            android:text="Ingredient:" />

        <EditText
            android:id="@+id/ingredEditText"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/addIngredientView"
            android:layout_marginTop="22dp"
            android:layout_toRightOf="@+id/ingredsView"
            android:background="#FFFFFF"
            android:ems="10"
            android:padding="2dp"
            android:textCursorDrawable="@drawable/drawable_cursor"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/amountView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:gravity="left"
            android:padding="2dp"
            android:text="Amount:" />

        <EditText
            android:id="@+id/amountEditText"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="22dp"
            android:layout_toRightOf="@+id/amountView"
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="number"
            android:padding="2dp"
            android:textCursorDrawable="@drawable/drawable_cursor"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/valueView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:gravity="left"
            android:padding="2dp"
            android:text="Unit:" />

        <Spinner
            android:id="@+id/valueSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_toRightOf="@+id/valueView"
            android:ems="10"
            android:padding="2dp"
            android:textColor="#FFFFFF"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/noteView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:gravity="left"
            android:padding="2dp"
            android:text="Note:" />

        <EditText
            android:id="@+id/noteEditText"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginTop="22dp"
            android:layout_toRightOf="@+id/noteView"
            android:background="#FFFFFF"
            android:ems="10"
            android:hint="Write any additional notes about the ingredient or other units for ingredient here"
            android:padding="2dp"
            android:textCursorDrawable="@drawable/drawable_cursor"
            android:textSize="14dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/errorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:text="" />

     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/errorView"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >
        
    <Button
        android:id="@+id/addIngredButton"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
          android:layout_marginRight="10dp"
        android:background="@drawable/drawable_button"
        android:text="Add" />
    
      <Button
        android:id="@+id/closeButton"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_below="@+id/errorView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/drawable_button"
        android:text="Close" />
    
    </LinearLayout>

</LinearLayout>