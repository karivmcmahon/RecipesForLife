<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dialog2"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/addBookView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="Add A Cookbook" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/bookNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:gravity="left"
            android:text="Name: " />

        <EditText
            android:id="@+id/bookNameEditText"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="22dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:textCursorDrawable="@drawable/drawable_cursor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/bookDescView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:gravity="left"
            android:text="Description: " />

        <EditText
            android:id="@+id/bookDescEditText"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="22dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:textCursorDrawable="@drawable/drawable_cursor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/cookbookImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:gravity="left"
            android:text="Select Cookbook Front Cover : " />

        <EditText
            android:id="@+id/cookbookImageEditText"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="22dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:focusable="false"
            android:hint="Press browse to select image"
            android:textSize="14dp" />

        <Button
            android:id="@+id/browseButton"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/drawable_button"
            android:text="Browse" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/privacyView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:gravity="left"
            android:text="Privacy: " />

        <Spinner
            android:id="@+id/privacySpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:ems="10"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <TextView
        android:id="@+id/errorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:text="" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/errorView"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/addButton"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_below="@+id/errorView"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/drawable_button"
            android:text="Add" />

        <Button
            android:id="@+id/closeButton"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_below="@+id/errorView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/drawable_button"
            android:text="Close" />
    </LinearLayout>

</LinearLayout>