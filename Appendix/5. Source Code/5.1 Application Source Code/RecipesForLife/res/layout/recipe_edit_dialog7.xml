<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_dialog2"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/recipeEditImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="Edit Recipe Images" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/recipeImagesView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recipeAddView3"
            android:layout_marginTop="22dp"
            android:gravity="left"
            android:text="Select Images : " />

        <EditText
            android:id="@+id/recipeImagesEditText"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/recipeAddView3"
            android:layout_marginTop="22dp"
            android:layout_toRightOf="@+id/recipeImagesView"
            android:background="#FFFFFF"
            android:ems="10"
            android:focusable="false"
            android:hint="Press browse to select image"
            android:textSize="14dp" />

        <Button
            android:id="@+id/bButton"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_below="@+id/recipeAddView3"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/recipeImagesView"
            android:background="@drawable/drawable_button"
            android:text="Browse" />
    </LinearLayout>

    <TextView
        android:id="@+id/errorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:text="" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/errorView"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/saveImageButton"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/drawable_button"
            android:text="Ok" />

        <Button
            android:id="@+id/closeButton"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_below="@+id/errorView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/drawable_button"
            android:text="Close" />
    </LinearLayout>

</LinearLayout>