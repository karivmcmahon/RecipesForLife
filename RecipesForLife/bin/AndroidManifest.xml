<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.recipesforlife"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/cross2"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name="com.example.recipesforlife.views.SignUpSignInActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.recipesforlife.views.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden" >
            
             <meta-data
            android:name="android.app.default_searchable"
            android:value="com.example.recipesforlife.views.SearchResultsActivity" />
           
        </activity>
        <activity
            android:name="com.example.recipesforlife.views.RecipeViewActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden" >
            
             <meta-data
            android:name="android.app.default_searchable"
            android:value="com.example.recipesforlife.views.SearchResultsActivity" />
 
        </activity>
        <activity
            android:name="com.example.recipesforlife.views.RecipeListViewActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden" >
            
             <meta-data
            android:name="android.app.default_searchable"
            android:value="com.example.recipesforlife.views.SearchResultsActivity" />
           
        </activity>
        <activity
            android:name="com.example.recipesforlife.views.RecipeEditActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden" >
            
             <meta-data
            android:name="android.app.default_searchable"
            android:value="com.example.recipesforlife.views.SearchResultsActivity" />
           
        </activity>
        
        
        <activity
            android:name="com.example.recipesforlife.views.CookbookListActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden" >
       
            <meta-data
            android:name="android.app.default_searchable"
            android:value="com.example.recipesforlife.views.SearchResultsActivity" />
            
          
        </activity>
        
        
       
        
        <activity android:name="com.example.recipesforlife.views.SearchResultsActivity"
             android:launchMode="singleTop" >

    <intent-filter>
        <action android:name="android.intent.action.SEARCH" />
    </intent-filter>
    
     <meta-data android:name="android.app.searchable"
            android:resource="@xml/searchable" />

</activity>
       
     

        <uses-library android:name="android.test.runner" />
    </application>

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:label="recipesforlife"
        android:targetPackage="com.example.recipesforlife" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

</manifest>