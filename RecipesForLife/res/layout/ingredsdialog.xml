<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape4"
    android:orientation="vertical" >
    
    <TextView
	           android:id="@+id/addIngredientView"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_marginTop="22dp"
	           android:layout_gravity="center_vertical|center_horizontal"
	           android:text="Add Ingredient:" />
	      
	<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	      <TextView
	           android:id="@+id/ingredsView"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_below="@+id/addIngredientView"
	           android:layout_marginTop="22dp"
	           android:gravity="left"
	           android:text="Ingredient:"
	           android:padding="2dp" />
	      
	       <EditText
	         android:id="@+id/ingredEditText"
	         android:layout_width="wrap_content"
	         android:layout_height="30dp"
	         android:layout_toRightOf="@+id/ingredsView"
	         android:layout_below="@+id/addIngredientView"
	         android:layout_marginTop="22dp"
	         android:ems="10"
	         android:textSize="14dp"
	         android:background="#FFFFFF"
	         android:padding="2dp"
	         />
	       </LinearLayout>
	      
	<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:orientation="horizontal">
	        <TextView
	           android:id="@+id/valueView"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	     	   
	           android:layout_marginTop="22dp"
	           android:gravity="left"
	           android:text="Value:"
	           android:padding="2dp" />
	      
	        <Spinner
	            android:id="@+id/valueSpinner"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@+id/valueView"
	            android:layout_marginTop="22dp"
	            android:ems="10"
	            android:textSize="14dp" 
	            android:textColor="#FFFFFF"
	            android:padding="2dp"/>
	        </LinearLayout>
	      
	<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:orientation="horizontal">
	          <TextView
	           android:id="@+id/amountView"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	     	  
	           android:layout_marginTop="22dp"
	           android:gravity="left"
	           android:text="Amount:" 
	           android:padding="2dp"/>
	          
	          <EditText
	         android:id="@+id/amountEditText"
	         android:layout_width="wrap_content"
	         android:layout_height="30dp"
	         android:layout_toRightOf="@+id/amountView"
	         android:layout_marginTop="22dp"
	         android:ems="10"
	         android:textSize="14dp"
	         android:background="#FFFFFF"
	         android:padding="2dp"
	         />
	        </LinearLayout>  
	        
		<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:orientation="horizontal">
	           <TextView
	           android:id="@+id/noteView"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_marginTop="22dp"
	           android:gravity="left"
	           android:text="Note:"
	           android:padding="2dp" />
	          
	          <EditText
	         android:id="@+id/noteEditText"
	         android:layout_width="wrap_content"
	         android:layout_height="30dp"
	         android:layout_toRightOf="@+id/noteView"
	         android:layout_marginTop="22dp"
	         android:ems="10"
	         android:textSize="14dp"
	         android:background="#FFFFFF"
	         android:padding="2dp"
	         />

       </LinearLayout>
       
		<Button
           android:id="@+id/addIngredButton"
           android:layout_width="60dp"
           android:layout_height="25dp"
   		   android:layout_gravity="center_vertical|center_horizontal"
           android:layout_marginTop="10dp"
           android:background="@drawable/button"
           android:text="Add" />
    
</LinearLayout>

