<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     android:background="@drawable/shape3"
     >

   <TextView
           android:id="@+id/additionalView"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:text="Additional Information" />
     <TextView
           android:id="@+id/cityView"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/additionalView"
           android:layout_marginTop="22dp"
           android:gravity="left"
           android:text="City:" />
    <TextView
           android:id="@+id/countryView"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/cityView"
           android:layout_marginTop="22dp"
           android:gravity="left"
           android:text="Country:" />
    
    <EditText
           android:id="@+id/countryEdit"
           android:layout_width="wrap_content"
           android:layout_height="30dp"
           android:layout_below="@+id/cityView"
           android:layout_marginTop="22dp"
           android:textSize="14dp"
           android:layout_toRightOf="@+id/countryView"
           android:ems="10"
           android:background="#FFFFFF"
            android:textCursorDrawable="@drawable/cursor"
      >
       </EditText>
       
    <TextView
           android:id="@+id/bioView"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/countryView"
          android:layout_marginTop="22dp"
           android:gravity="left"
           android:text="Bio:" />

     <EditText
         android:id="@+id/cityEdit"
         android:layout_width="wrap_content"
         android:layout_height="30dp"
         android:layout_alignLeft="@+id/countryEdit"
         android:layout_alignTop="@+id/cityView"
         android:ems="10"
         android:textSize="14dp"
         android:background="#FFFFFF"
          android:textCursorDrawable="@drawable/cursor" >
          <requestFocus />
          </EditText>

     <EditText
         android:id="@+id/bioEditText"
         android:layout_width="wrap_content"
         android:layout_height="30dp"
         android:layout_alignLeft="@+id/countryEdit"
         android:layout_alignTop="@+id/bioView"
         android:ems="10"
         android:textSize="14dp"
         android:background="#FFFFFF"
          android:textCursorDrawable="@drawable/cursor"
         />
     
      <TextView
           android:id="@+id/errorView"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/interestView"
           android:layout_marginTop="22dp"
           android:layout_centerHorizontal="true"
           android:layout_centerVertical="true"
            />
      
      <EditText
         android:id="@+id/interestEditText"
         android:layout_width="wrap_content"
         android:layout_height="30dp"
         android:layout_toRightOf="@+id/interestView"
         android:layout_below="@+id/bioView"
         android:layout_marginTop="22dp"
         android:ems="10"
         android:textSize="14dp"
         android:background="#FFFFFF"
          android:textCursorDrawable="@drawable/cursor"
	/>
       <TextView
           android:id="@+id/interestView"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/bioView"
           android:layout_marginTop="22dp"
           android:gravity="left"
           android:text="Cooking interest:" />
      
      <Button
           android:id="@+id/signUpButton"
           android:layout_width="wrap_content"
           android:layout_height="25dp"
           android:layout_below="@+id/errorView"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="26dp"
           android:background="@drawable/button"
           android:text="Sign Up" />

</RelativeLayout>
