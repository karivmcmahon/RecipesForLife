<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shape3" >
    
    <TextView
           android:id="@+id/editBookView"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_vertical|center_horizontal"
           android:text="Edit Cookbook" />
     
       <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	      <TextView
	           android:id="@+id/bookNameView"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_marginTop="22dp"
	           android:gravity="left"
	           android:text="Name: "
	            />
	      
	       <EditText
	         android:id="@+id/bookNameEditText"
	         android:layout_width="wrap_content"
	         android:layout_height="30dp"
	         android:layout_marginTop="22dp"
	         android:ems="10"
	         android:textSize="14dp"
	         android:background="#FFFFFF"
	         
	         />
       </LinearLayout>
       
           <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	      <TextView
	           android:id="@+id/bookDescView"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_marginTop="22dp"
	           android:gravity="left"
	           android:text="Description: "
	            />
	      
	       <EditText
	         android:id="@+id/bookDescEditText"
	         android:layout_width="wrap_content"
	         android:layout_height="100dp"
	         android:layout_marginTop="22dp"
	         android:ems="10"
	         android:textSize="14dp"
	         android:background="#FFFFFF"
	         
	         />
       </LinearLayout>
       
       <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	      <TextView
	           android:id="@+id/cookbookImageView"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_below="@+id/recipeAddView3"
	           android:layout_marginTop="22dp"
	           android:gravity="left"
	           android:text="Select Cookbook Front Cover : " />
	      
	       <EditText
	         android:id="@+id/cookbookImageEditText"
	         android:layout_width="wrap_content"
	         android:layout_height="30dp"
	         android:layout_toRightOf="@+id/recipeImagesView"
	         android:layout_below="@+id/recipeAddView3"
	         android:layout_marginTop="22dp"
	         android:ems="10"
	         android:textSize="14dp"
	         android:background="#FFFFFF"
	         
	         />
	       
	        <Button
           android:id="@+id/browseButton"
           android:layout_width="80dp"
           android:layout_height="25dp"
           android:layout_toRightOf="@+id/cookbookImageView"
	       android:layout_below="@+id/addBookView"
   		   android:layout_gravity="center_vertical|center_horizontal"
           android:layout_marginTop="10dp"
           android:background="@drawable/button"
           android:text="Browse" />
    </LinearLayout>
       
            <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	      <TextView
	           android:id="@+id/privacyView"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_marginTop="22dp"
	           android:gravity="left"
	           android:text="Privacy: "
	            />
	       <Spinner
	            android:id="@+id/privacySpinner"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="22dp"
	            android:ems="10"
	            android:textSize="14dp" 
	            android:textColor="#FFFFFF"/>
	      
       </LinearLayout>
       
             <TextView
	           android:id="@+id/errorView"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_marginTop="22dp"
	           android:gravity="center"
	           android:text="" />
       
             <Button
           android:id="@+id/updateButton"
           android:layout_width="80dp"
           android:layout_height="25dp"
   		   android:layout_gravity="center_vertical|center_horizontal"
           android:layout_marginTop="10dp"
           android:background="@drawable/button"
           android:text="Update" />

</LinearLayout>
