<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
       android:background="@drawable/shape4"
    android:orientation="vertical" >
    
     <TextView
	           android:id="@+id/addStepView"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_marginTop="22dp"
	           android:layout_gravity="center_vertical|center_horizontal"
	           android:text="Add A Step:" />
     
     <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:orientation="horizontal" >
	      <TextView
	           android:id="@+id/stepNumView"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_below="@+id/addStepView"
	           android:layout_marginTop="22dp"
	           android:gravity="left"
	           android:text="Step Number:"
	           android:padding="2dp" />
	      
	       <EditText
	         android:id="@+id/stepNumEditText"
	         android:layout_width="40dp"
	         android:layout_height="30dp"
	         android:layout_toRightOf="@+id/stepNumView"
	         android:layout_below="@+id/addStepView"
	         android:layout_marginTop="22dp"
	         android:ems="10"
	         android:textSize="14dp"
	         android:background="#FFFFFF"
	         android:padding="2dp"
	         android:inputType="number"
	         />
	       
	       <TextView
	           android:id="@+id/stepView"
	           android:layout_width="fill_parent"
	           android:layout_height="wrap_content"
	           android:layout_below="@+id/addStepView"
	           android:layout_marginTop="22dp"
	           android:gravity="left"
	           android:text="Step:"
	           android:padding="2dp" />
	      
	       <EditText
	         android:id="@+id/stepEditText"
	         android:layout_width="fill_parent"
	         android:layout_height="100dp"
	         android:layout_toRightOf="@+id/stepView"
	         android:layout_below="@+id/addStepView"
	         android:layout_marginTop="22dp"
	         android:ems="10"
	         android:textSize="14dp"
	         android:background="#FFFFFF"
	         android:padding="2dp"
	         android:inputType="textMultiLine"
	         />
	       </LinearLayout>
	       
      <TextView
	           android:id="@+id/errorView"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_marginTop="22dp"
	           android:gravity="center"
	           android:text="" />
	       
     <Button
           android:id="@+id/addStepButton"
           android:layout_width="60dp"
           android:layout_height="25dp"
   		   android:layout_gravity="center_vertical|center_horizontal"
           android:layout_marginTop="10dp"
           android:background="@drawable/button"
           android:text="Add" />

</LinearLayout>
