<?xml version="1.0" encoding="utf-8"?>

 <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RecipeViewActivity">
    <!-- The main content view -->
    <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    
    <!-- The navigation drawer -->
    <ListView
            android:id="@+id/left_drawer"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:choiceMode="singleChoice"
            android:divider="#FFFFFF"
            android:dividerHeight="0.5dp"
            android:background="@drawable/fadedbar4"/>
    
  <com.example.recipesforlife.views.VerticalScrollView 
   
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<RelativeLayout 
     android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
 
     <TextView
        android:id="@+id/recipeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Choc Chip Heaven"
        android:textColor="#F3216C" />
     
      <TextView
        android:id="@+id/recipeDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recipeTitle"
        android:layout_centerHorizontal="true"
        android:text="Best choc chip cookies"
        android:textStyle="italic" />

      <ImageView
          android:id="@+id/foodImage"
          android:layout_width="fill_parent"
          android:layout_height="400dp"
          android:layout_below="@+id/recipeDesc"
          android:scaleType="fitXY"
          android:layout_marginTop="44dp"
          android:src="@drawable/cookie" />
      
       <ImageView
          android:id="@+id/forkImage"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_below="@+id/foodImage"
          android:scaleType="fitXY"     
          android:src="@drawable/cross85" />
       
        <TextView
        android:id="@+id/serves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foodImage"
        android:layout_toRightOf="@+id/forkImage"
        android:text="Serves: "
        android:textColor="#F3216C"
       />
        
        <TextView
        android:id="@+id/servesVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foodImage"
        android:layout_toRightOf="@+id/serves"
        android:text="8"
        
       />
        
        <TextView
        android:id="@+id/difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/serves"
        android:layout_toRightOf="@+id/forkImage"
        android:text="Difficulty: "
        android:textColor="#F3216C"
       />
        
        <TextView
        android:id="@+id/diffVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/servesVal"
        android:layout_toRightOf="@+id/difficulty"
        android:text="x"
        
       />
        
         <ImageView
          android:id="@+id/chefImage"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_below="@+id/foodImage"
        	  android:layout_toLeftOf="@+id/cusine"
          android:scaleType="fitXY"     
          android:src="@drawable/chef" 
           />
         
         <TextView
        android:id="@+id/cusine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foodImage"
         android:layout_toLeftOf="@+id/cusineVal"
        android:text="Cusine: "
        android:textColor="#F3216C"
       />
        
        <TextView
        android:id="@+id/cusineVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foodImage"
        
         android:layout_centerInParent="true"
        android:text=""
        
       />
        
         <TextView
        android:id="@+id/dietary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cusine"
         android:layout_toLeftOf="@+id/dietaryVal"
        android:text="Dietary: "
        android:textColor="#F3216C"
       />
        
        <TextView
        android:id="@+id/dietaryVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cusineVal"
         android:layout_centerInParent="true"
       
        android:text=""
        
       />
        
         <ImageView
          android:id="@+id/timeImage"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_below="@+id/foodImage"
          android:layout_toLeftOf="@+id/cookingTime"
          android:scaleType="fitXY"     
          android:src="@drawable/black407" 
           />
         
        <TextView
        android:id="@+id/prepTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foodImage"
        android:layout_toLeftOf="@+id/prepTimeVal"
        android:text="Prep Time:"
        android:textColor="#F3216C"
       />
        
         <TextView
        android:id="@+id/prepTimeVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foodImage"
        android:layout_alignParentRight="true"       
        android:text="18:00"
       />
       
         
          <TextView
        android:id="@+id/cookingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prepTime"
        android:layout_toLeftOf="@+id/cookingTimeVal"
        android:text="Cooking Time:"
        android:textColor="#F3216C"
       />
          
          <TextView
        android:id="@+id/cookingTimeVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prepTimeVal"
        android:layout_alignParentRight="true"       
        android:text="18:00"
       />
          
        <TextView
        android:id="@+id/ingredientTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forkImage"
        android:layout_marginTop="40dp"
        android:text="Ingredients: "
        android:textColor="#F3216C"
       />
        
         <TextView
        android:id="@+id/ingredientList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ingredientTitle"
        android:layout_marginTop="10dp"
        android:text=""
         android:layout_marginLeft="10dp"
       />
        
         <TextView
        android:id="@+id/methodTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ingredientList"
        android:layout_marginTop="20dp"
        android:text="Method: "
        android:textColor="#F3216C"
        
       />
         
          <TextView
        android:id="@+id/methodList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/methodTitle"
        android:layout_marginTop="10dp"
        android:text=" "
        android:layout_marginLeft="10dp"
       />
          
           <TextView
        android:id="@+id/tipsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/methodList"
        android:layout_marginTop="20dp"
        android:text="Additional Tips: "
        android:textColor="#F3216C"
        
       />
         
          <TextView
        android:id="@+id/tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tipsTitle"
        android:layout_marginTop="10dp"
        android:text=" "
        android:layout_marginLeft="10dp"
       />
          
            <TextView
        android:id="@+id/reviewHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tips"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Review or suggest alterations to recipe"
       
       />
            
        <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/reviewHeader"
        android:weightSum="2"
        >
            
            
       
	         <EditText
	             android:id="@+id/reviewBox"
	             android:layout_width="0dp"
	             android:layout_height="90dp"
	              android:layout_weight="1.7"
	            android:textSize="14dp"
	             android:ems="10"
	             android:inputType="textMultiLine"
	             android:layout_marginTop="10dp"
	             android:background="#FFFFFF"
	             android:textCursorDrawable="@drawable/cursor"
	             android:hint="Add a review or suggestion">            
	         </EditText>
	         
	         <Button
           android:id="@+id/sumbitButton"
           android:layout_width="0dp"
           android:layout_height="25dp"
            android:layout_weight="0.3"
           android:layout_marginTop="10dp"
           android:background="@drawable/button"
           android:text="Submit" />
	        
	        </LinearLayout>
	        
        <LinearLayout
     
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
         android:layout_below="@+id/ll" >
	         
        <TextView
	           android:id="@+id/errorView"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_marginTop="22dp"
	           android:gravity="center"
	           android:text="" />
	        
        <ListView
            android:id="@+id/reviewlist"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/gradient_bg"
            android:scaleType="fitXY"
            
             android:divider="#F3216C"
             android:dividerHeight="1px" >
        </ListView>
        </LinearLayout>
 

</RelativeLayout>
</com.example.recipesforlife.views.VerticalScrollView >
 
</android.support.v4.widget.DrawerLayout>