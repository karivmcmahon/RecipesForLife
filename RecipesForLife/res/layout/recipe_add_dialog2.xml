<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_dialog2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/recipeAddView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Add Recipe Continued" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/recipeIngredsView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recipeAddView2"
                android:layout_marginTop="22dp"
                android:gravity="left"
                android:text="Recipe ingredients:" />

            <EditText
                android:id="@+id/recipeIngredsEditText"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_below="@+id/recipeAddView2"
                android:layout_marginTop="22dp"
                android:layout_toRightOf="@+id/recipeIngredsView"
                android:background="#FFFFFF"
                android:ems="10"
                android:focusable="false"
                android:hint="Press plus button on right hand side to add an ingredient"
                android:inputType="textMultiLine"
                android:textSize="14dp" />

            <ImageButton
                android:id="@+id/ingredsAddButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/recipeAddView2"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginTop="22dp"
                android:layout_toRightOf="@+id/recipeIngredsEditText"
                android:background="@drawable/icon_plus2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/recipeStepsView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recipeIngredsView"
                android:layout_marginTop="22dp"
                android:gravity="left"
                android:text="Method: " />

            <EditText
                android:id="@+id/recipeStepsEditText"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_below="@+id/recipeIngredsView"
                android:layout_marginTop="22dp"
                android:layout_toRightOf="@+id/recipeStepsView"
                android:background="#FFFFFF"
                android:ems="10"
                android:focusable="false"
                android:hint="Press plus button on right hand side to add a step"
                android:inputType="textMultiLine"
                android:textSize="14dp" />

            <ImageButton
                android:id="@+id/stepsAddButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/recipeIngredsView"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginTop="22dp"
                android:layout_toRightOf="@+id/recipeStepsEditText"
                android:background="@drawable/icon_plus2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/recipeServesView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recipeMethodView"
                android:layout_marginTop="22dp"
                android:gravity="left"
                android:text="Serves: " />

            <EditText
                android:id="@+id/recipeServesEditText"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_below="@+id/recipeServesView"
                android:layout_marginTop="22dp"
                android:layout_toRightOf="@+id/recipeServesView"
                android:background="#FFFFFF"
                android:ems="10"
                android:inputType="number"
                android:textCursorDrawable="@drawable/drawable_cursor"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/recipePrepView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recipeServesView"
                android:layout_marginTop="22dp"
                android:gravity="left"
                android:text="Prep time: " />

            <EditText
                android:id="@+id/recipePrepEditText"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_below="@+id/recipeServesView"
                android:layout_marginTop="22dp"
                android:layout_toRightOf="@+id/recipePrepView"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:editable="false"
                android:ems="10"
                android:textSize="14dp" >
            </EditText>

            <TextView
                android:id="@+id/recipeCookingView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recipeServesView"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="22dp"
                android:layout_toRightOf="@+id/recipePrepEditText"
                android:gravity="left"
                android:text="Cooking time: " />

            <EditText
                android:id="@+id/recipeCookingEditText"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_below="@+id/recipeServesView"
                android:layout_marginTop="22dp"
                android:layout_toRightOf="@+id/recipeCookingView"
                android:background="#FFFFFF"
                android:editable="false"
                android:ems="10"
                android:inputType="time"
                android:textSize="14dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/errorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:gravity="center"
            android:text="" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/errorView"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/nextButton"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_below="@+id/recipePrepView"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/drawable_button"
                android:text="Next" />

            <Button
                android:id="@+id/closeButton"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_below="@+id/errorView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/drawable_button"
                android:text="Close" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>