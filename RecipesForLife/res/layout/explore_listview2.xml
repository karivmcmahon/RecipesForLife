<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExploreDifficultyActivity" >

    <!-- The main content view -->

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- The navigation drawer -->

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/background_actionbar"
        android:choiceMode="singleChoice"
        android:divider="#FFFFFF"
        android:dividerHeight="0.5dp" />


     <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            
            >
            
           <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_actionbar"
            >
            
            <TextView
                    android:id="@+id/exploreheader"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                 
                    android:layout_toLeftOf="@+id/diffSpinner"
                    android:padding="5dp"
                    android:text="Explore Recipes By  " />

                <Spinner
                    android:id="@+id/diffSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:textSize="14dp"
                     android:padding="5dp"
                    android:theme="@android:style/Theme.Holo"
                  
                     android:layout_centerHorizontal="true"
                     android:gravity="center" />
                
                 <TextView
                    android:id="@+id/exploreheadercont"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
     				 android:layout_toRightOf="@+id/diffSpinner" 
                 	android:gravity="center"
                    android:padding="5dp"
                    android:text="Difficulty " />
        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            

            <ListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:divider="#F3216C"
                android:dividerHeight="1px" >
            </ListView>
        </LinearLayout>
        </RelativeLayout>
</RelativeLayout>
</android.support.v4.widget.DrawerLayout>