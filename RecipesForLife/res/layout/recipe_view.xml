<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Recipe_View" >

    <!-- The main content view -->

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- The navigation drawer -->

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/background_actionbar"
        android:choiceMode="singleChoice"
        android:divider="#FFFFFF"
        android:dividerHeight="0.5dp" />

    <com.example.recipesforlife.util.VerticalScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:id="@+id/recipeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Choc Chip Heaven"
                android:textColor="#F3216C" />

            <TextView
                android:id="@+id/recipeDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recipeTitle"
                android:layout_centerHorizontal="true"
                android:text="Best choc chip cookies"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/foodImage"
                android:layout_width="fill_parent"
                android:layout_height="400dp"
                android:layout_below="@+id/recipeDesc"
                android:layout_marginTop="44dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/forkImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/foodImage"
                android:scaleType="fitXY"
                android:src="@drawable/icon_forkandknife2" />

            <TextView
                android:id="@+id/serves"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/foodImage"
                android:layout_toRightOf="@+id/forkImage"
                android:text="Serves: "
                android:textColor="#F3216C" />

            <TextView
                android:id="@+id/servesVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/foodImage"
                android:layout_toRightOf="@+id/serves"
                android:text="8" />

            <TextView
                android:id="@+id/difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/serves"
                android:layout_toRightOf="@+id/forkImage"
                android:text="Difficulty: "
                android:textColor="#F3216C" />

            <TextView
                android:id="@+id/diffVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/servesVal"
                android:layout_toRightOf="@+id/difficulty"
                android:text="x" />

            <ImageView
                android:id="@+id/chefImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/forkImage"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_chefhat" />

            <TextView
                android:id="@+id/cusine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/difficulty"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/chefImage"
                android:text="Cusine: "
                android:textColor="#F3216C" />

            <TextView
                android:id="@+id/cusineVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginTop="20dp"
                android:layout_below="@+id/difficulty"
                android:layout_toRightOf="@+id/cusine"
                android:text="" />

            <TextView
                android:id="@+id/dietary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cusine"
                android:layout_toRightOf="@+id/chefImage"
                android:text="Dietary: "
                android:textColor="#F3216C" />

            <TextView
                android:id="@+id/dietaryVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cusineVal"
                android:layout_toRightOf="@+id/dietary"
                android:text="" />

            <ImageView
                android:id="@+id/timeImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/foodImage"
                android:layout_toLeftOf="@+id/cookingTime"
                android:scaleType="fitXY"
                android:src="@drawable/icon_timeicon" />

            <TextView
                android:id="@+id/prepTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/foodImage"
                android:layout_toLeftOf="@+id/prepTimeVal"
                android:text="Prep Time:"
                android:textColor="#F3216C" />

            <TextView
                android:id="@+id/prepTimeVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/foodImage"
                android:text="18:00" />

            <TextView
                android:id="@+id/cookingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prepTime"
                android:layout_toLeftOf="@+id/cookingTimeVal"
                android:text="Cooking Time:"
                android:textColor="#F3216C" />

            <TextView
                android:id="@+id/cookingTimeVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/prepTimeVal"
                android:text="18:00" />

            <TextView
                android:id="@+id/ingredientTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chefImage"
                android:layout_marginTop="40dp"
                android:text="Ingredients: "
                android:textColor="#F3216C" />

            <TextView
                android:id="@+id/ingredientList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ingredientTitle"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="" />

            <TextView
                android:id="@+id/methodTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ingredientList"
                android:layout_marginTop="20dp"
                android:text="Method: "
                android:textColor="#F3216C" />

            <TextView
                android:id="@+id/methodList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/methodTitle"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text=" " />

            <TextView
                android:id="@+id/tipsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/methodList"
                android:layout_marginTop="20dp"
                android:text="Additional Tips: "
                android:textColor="#F3216C" />

            <TextView
                android:id="@+id/tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tipsTitle"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text=" " />

            <TextView
                android:id="@+id/reviewHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tips"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Review or suggest alterations to recipe" />

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reviewHeader"
                android:orientation="horizontal"
                android:weightSum="2" >

                <EditText
                    android:id="@+id/reviewBox"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1.7"
                    android:background="#FFFFFF"
                    android:ems="10"
                    android:hint="Add a review or suggestion"
                    android:inputType="textMultiLine"
                    android:textCursorDrawable="@drawable/drawable_cursor"
                    android:textSize="14dp" >
                </EditText>

                <Button
                    android:id="@+id/sumbitButton"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.3"
                    android:background="@drawable/drawable_button"
                    android:text="Submit" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ll"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/errorView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="" />

                <ListView
                    android:id="@+id/reviewlist"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@drawable/background_search"
                    android:divider="#F3216C"
                    android:dividerHeight="1px"
                    android:scaleType="fitXY" >
                </ListView>
            </LinearLayout>
        </RelativeLayout>
    </com.example.recipesforlife.util.VerticalScrollView>

</android.support.v4.widget.DrawerLayout>