<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchResultsActivity" >

    <!-- The main content view -->

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- The navigation drawer -->

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/fadedbar4"
        android:choiceMode="singleChoice"
        android:divider="#FFFFFF"
        android:dividerHeight="0.5dp" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/recipeheader"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/fadedbar4"
            android:gravity="center"
            android:padding="5dp" />

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/gradient_bg" >
        </ListView>

        <TextView
            android:id="@+id/cookbookheader"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/fadedbar4"
            android:gravity="center"
            android:padding="5dp"
            android:text="Cookbooks that feature &apos; &apos; " />

        <ListView
            android:id="@+id/cookbooklist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/gradient_bg" >
        </ListView>

        <TextView
            android:id="@+id/userheader"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/fadedbar4"
            android:gravity="center"
            android:padding="5dp"
            android:text="Users that feature &apos; &apos;" />

        <TextView
            android:id="@+id/userrows"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/gradient_bg"
            android:gravity="center"
            android:padding="5dp"
            android:text="No results" />
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>