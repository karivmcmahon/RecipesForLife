<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape3"
    android:orientation="vertical" >
    
    <TextView
           android:id="@+id/recipeEditView"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_vertical|center_horizontal"
           android:text="Edit Recipe" />
     
       <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	      <TextView
	           android:id="@+id/recipeDietaryView"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_marginTop="22dp"
	           android:gravity="left"
	           android:text="Dietary: "
	            />
	      
	       <EditText
	         android:id="@+id/recipeDietaryEditText"
	         android:layout_width="wrap_content"
	         android:layout_height="30dp"
	         android:layout_marginTop="22dp"
	         android:ems="10"
	         android:textSize="14dp"
	         android:background="#FFFFFF"
	          android:textCursorDrawable="@drawable/cursor"
	         
	         />
       </LinearLayout>
       
       <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	      <TextView
	           android:id="@+id/recipeCusineView"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_marginTop="22dp"
	           android:gravity="left"
	           android:text="Cusine: "
	            />
	      
	      <Spinner
	            android:id="@+id/recipeCusineSpinner"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@+id/recipeDifficultyView"
	            android:layout_marginTop="22dp"
	            android:ems="10"
	            android:textSize="14dp" 
	            android:textColor="#FFFFFF"/>	  
       </LinearLayout>
       
       	   <TextView
	           android:id="@+id/errorView"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_marginTop="22dp"
	           android:gravity="center"
	           android:text="" />
    
         <Button
           android:id="@+id/saveButton"
           android:layout_width="60dp"
           android:layout_height="25dp"
   		   android:layout_gravity="center_vertical|center_horizontal"
           android:layout_marginTop="10dp"
           android:background="@drawable/button"
           android:text="Ok" />
    

</LinearLayout>
